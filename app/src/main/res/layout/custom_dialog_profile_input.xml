<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#610929"
    android:padding="5dp"
    android:id="@+id/idinputFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/close_input"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461">

    </TextView>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="110dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#E2E6ED"

            android:src="@drawable/ic_add"
            app:layout_constraintTop_toBottomOf="@+id/textView23">

        </ImageView>

        <EditText
            android:background="@drawable/custom_dialog_input"
            android:id="@+id/id_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:hint="Enter Name..."
            android:textColor="@color/white"
            android:textColorHint="#8FA5B1B3"
            android:textCursorDrawable="@color/favgreen"
            android:textSize="20dp">

        </EditText>

        <EditText
            android:background="@drawable/custom_dialog_input"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/id_input_dob"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="Enter DOB in DD-MM-YYYY"
            android:textColorHint="#8FA5B1B3"
            android:textCursorDrawable="@color/favgreen"
            android:textColor="@color/white"
            android:textSize="20sp">
        </EditText>


        <EditText
            android:background="@drawable/custom_dialog_input"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/id_input_gender"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:hint="Specify Gender..."
            android:textColorHint="#8FA5B1B3"
            android:textCursorDrawable="@color/favgreen"
            android:textColor="@color/white"
            android:textSize="20sp">
        </EditText>
        <TextView
            android:background="@drawable/custom_dialog_input"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/id_input_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Relation: Self"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            tools:layout_editor_absoluteY="144dp">
        </TextView>
        <Button
            android:gravity="center"
            android:id="@+id/input_editbutton"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/custom_dialog_button"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="Set Profile">

        </Button>
    </LinearLayout>


</LinearLayout>