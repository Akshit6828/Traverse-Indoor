<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/black_border"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <ImageView
        android:id="@+id/image_disease"
        android:layout_width="101dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disease_name"
        app:layout_constraintVertical_bias="0.017"
        app:srcCompat="@drawable/diabetes2" />

    <TextView
        android:id="@+id/expected_Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected Value"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_disease"
        app:layout_constraintEnd_toStartOf="@+id/image_disease"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_disease" />

    <TextView
        android:id="@+id/actualvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Actual Value"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_disease"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_disease"
        app:layout_constraintVertical_bias="0.494" />

    <TextView
        android:id="@+id/disease_name"
        android:layout_width="318dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:background="#8F0937"
        android:gravity="center"
        android:text=" Disease Name"
        android:textColor="#F3EFF0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/image_disease"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/image_disease"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>