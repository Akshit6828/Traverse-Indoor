<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:background="@color/colorPrimary"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="X"
        style="bold"
        android:textSize="20dp"
        android:background="@drawable/container_bg"
        android:textColor="@color/bluedark"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/textView22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/iduserimage_custom_dialog"
            android:layout_width="255dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            android:src="@drawable/boyfather"
            app:layout_constraintTop_toBottomOf="@+id/textView23">

        </ImageView>
        <TextView

            android:background="@null"
            android:id="@+id/idname_custom_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="Akshit Mangotra"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>
        <TextView

            android:background="@null"
            android:id="@+id/idrelation_custom_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="Relation: "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/iddob_custom_dialog"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="DOB: "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/idgender_custom_dialog"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Gender:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.422"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            tools:layout_editor_absoluteY="144dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:background="@color/orange"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/setReminder"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tvsetReminder"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set\nReminder"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:background="@color/greendialog"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/match_symptoms"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tvmatch_symptoms"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Match Symptoms"
                android:textColor="@color/white"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:background="@color/bluelight"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/preventive_measures"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tvpreventive_measures"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Preventive Measures"
                android:textColor="#FFFFFF"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/closebuttondialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/custom_dialog_button"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Close"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold">

        </Button>
    </LinearLayout>



</LinearLayout>